{
  "expo": {
    "name": "Stylio",
    "slug": "stylio",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#8B5CF6"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.stylio.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to show nearby salons and services.",
        "NSLocationAlwaysUsageDescription": "We need your location to show nearby salons and services."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#8B5CF6"
      },
      "package": "com.stylio.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "extra": {
      "apiUrl": "https://stylio-be.onrender.com/api",
      "eas": {
        "projectId": "edf6d31f-6c3a-4697-a820-4114a8e50897"
      }
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Stylio to use your location to find nearby salons."
        }
      ],
      "expo-video"
    ],
    "owner": "balaji143as-organization"
  }
}
